/**index.wxss**/
.userinfo {
 width: 100%;
 height: 160px;
 background-color: #527ae7;
 color: white;
 margin-bottom: 130px;

}
.userinfo button{
  background-color: rgb(245, 244, 250);
  width: 180px;
  margin-top: 30px;
  margin: auto;
  border-radius: 40%;
}
.self_header{
  width: 380px;
  height: 200px;
  background-color: white;
  border-radius: 5%;
  z-index: 3;
  position: absolute;
  top: 80px;
  left: 0;
  right: 0;
  margin: auto;
  box-shadow: 8px 14px 38px rgba(39, 44, 49, 0.06), 1px 3px 8px rgba(39, 44, 49, 0.03);
}
.img{
  width: 150px;
  height: 150px;
  position: absolute;
  top: -50px;
  left:0;
  right: 0;
  margin: auto;
}
.userinfo-avatar {
  display: block;
  width: 60%;
  height: 60%;
  margin: auto;
  border-radius: 50%;
}
.text{
  font-size: 20px;
  position: absolute;
  top:60px;
  left: 39%;
}
.userinfo-nickname {
  display: block;
  color:black;
}
.selfsign{
color: black;
z-index: 10;
position: absolute;
bottom: 15px;
padding: 0 10px;
}
.sign{
  font-size: 15px;
}
.selflist{
  margin-top: 50px;
  margin-left: 11px;
}
.selflist i-cell{
  display: inline-block;
  width: 93%;
}
textarea{
  width: 250px;
  margin: 10px;
  font-size: 14px;
}
.i-cell-text {
line-height:25px;
font-size:16px;
}