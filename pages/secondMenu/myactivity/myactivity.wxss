/* pages/secondMenu/myactivity/myactivity.wxss */
.activity_list{
  font-family:微软雅黑;
  margin: 10px 0;
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.timer{
  width: 20%;
  margin-left: 20px;
}
.timer text{
  display: block;
  margin-bottom: 10px;
  color:darkcyan;
  font-family:'Times New Roman', Times, serif;
  font-size: 12px;
}
#hour{
  font-size: 17px;
  font-weight: 500px;
}
.post_card{
  width: 67%;
  border: 1px solid darkgrey;
  background: #fff 50%;
  margin:0 20px 20px 0;
}
.post_card image{
  width: 100%;
  height: 120px;
}
 .title{
  font-size:18px;
  font-weight: 700;
  margin: 10px 10px;
}
.content{
  font-style: unset;
  font-size: 16px;
  color:darkgrey; 
  margin: 10px 10px;
}
.footer text{
  font-size: 12px;
  color:darkgrey; 
  font-style: unset;
}
.footer i-icon{
  margin-left: 10px;
  margin-right: 7px;
}
