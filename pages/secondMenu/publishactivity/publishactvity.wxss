/* pages/publishactivity/publishactvity.wxss */
.navbar{
  width:100%;
  flex: none;
  display: flex;
  background:white;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 60rpx;
  font-style: italic;
  font-family: cursive;
  font-stretch: expanded;
}
.navbar .item.active{
  color: #527ae7;
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #527ae7;
}
.tab_01{
  margin: 0 10px;
}
form{
  width: 100%;
}
.iTitle{
  width: 95%;
  font-size: 18px;
  line-height: 25px;
  border: 1px solid 	#FFF0F5;
  border-radius: 5px;
  margin: 5px 0px;
}
textarea{
  width: 95%;
  margin: auto;
}
.aContent{
  font-size: 18px;
}
.paContent{
  font-size: 18px;
  font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
}
.chooseImageWrap{
  position: relative;
  display: inline-block;
  width:90px;
  height: 90px;
  margin: 10px;
}
.ax{
  display: inline-block;
  width:150px;
  height: 150px;
  margin: 10px;
}
.chooseImage image{
  width:150px;
  height: 150px;
}
.chooseTitleImg image{
  width:150px;
  height: 150px;
}

.chooseImageClose{
  position: absolute;
  top:5px;
  right: 5px;
  border-radius: 50%;
  background-color: red;
}
.chooseTitleImg{
  font-size: 14px;
  color: #FFCC00;
}
.btn{
  width: 100%;
  position: fixed;
  bottom: 10px;
}
.submit{
  display: inline-block;
  width:60%;
  border-radius: 10px;
  margin: 10px 10px;
  background-color: #527ae7;
}
.reset{
  display: inline-block;
  width:20%;
  border-radius: 10px;
  margin: 10px 10px;
  background-color:rgb(219, 206, 152);
}
