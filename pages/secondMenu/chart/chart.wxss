/* pages/chart/chart.wxss */
.container{
  font-size: 15px;
  font-family:微软雅黑;
  margin: 0 10px;
}
.head text{
  display: inline-block;
  font-size: 13px;
  margin: 0 20px 10px 20px;
}
.title{
  color:brown;
  text-align: center;
  font-size:18px;
  font-family:微软雅黑;
  font-weight: 700;
  border-bottom: 1px solid black;
}
.contentText{
  display: block;
  font-family: 微软雅黑;
  font-size: 16px;
  margin:5px 10px;
}
.content image{
  float: left;
  width: 150px;
  height: 150px;
  margin: 10px;
}
.name{
  display: inline-block;
  color:rgb(59, 80, 119);
  margin-right: 15px;
}
.commitList{
  margin: 5px 10px;
}
.like{
  width: 40%;
  margin: auto;
  margin-bottom: 55px;
}
.like i-icon{
  display: inline-block;
  margin: auto;
}
.likethis{
  display: inline-block;
  width: 80px;
  height: 80px;
  margin: auto;
}
.footer{
   position: fixed;
    bottom: 0;
    color: #000;
    width: 100%;
    height: 90rpx;
    z-index: 1050;
    background-color: #ffffff;
    box-shadow:0px 5px 22px 5px rgb(180, 180, 180);
    margin-left: -8px;
}
.commentInput {
    background-color: #f5f7f6;
    width:72%;
    margin: auto;
    float: left;
    height: 60rpx;
    margin-top: 15rpx;
    margin-left:20rpx;
    border-radius: 5px;
    line-height:60rpx;
}

.input {
    font-size:14px;
    margin-left:15rpx;
    margin-right:15rpx;
    height: 60rpx;
    line-height:60rpx;
    color: #929292;
}

.commentBtn {
    background-color: #f5f7f6;
    width:20%;
    margin: auto;
    float: right;
    text-align: center;
    color: #929292;
    height: 60rpx;
    margin-top: 15rpx;
    margin-right:20rpx;
    border-radius: 5px;
    line-height:60rpx;
    font-size:14px;
}
.userinfoBtn {
    width: 94%;
    background-color: #f5f7f6;
    color: #929292;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    border-radius: 5px;
    line-height:60rpx;
    font-size:14px;
    margin-top: 15rpx;
}
button::after {
  border: none;
}