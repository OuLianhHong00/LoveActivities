.search{
  width: 90%;
  height: 30px;
  border-radius: 10px;
  border: 1px solid black;
  margin-left: 20px;
}
.search input{
  font-size: 15px;
  width: 85%;
}
.icon_search{
  display: inline-block;
  float: right;
  z-index: 3;
}
.search i-icon{
  float: right;
  z-index: 4;
}
.detail{
   margin:10px 15px;
}
 .title{
  font-size:18px;
  font-weight: 400;
  margin: 10px 5px;
}
.post_card image{
  border-radius: 10px;
  width: 100%;
  height: 150px;
  margin-top: 10px;
}
.content{
  font-style: unset;
  font-size: 16px;
  color:darkgrey; 
  margin-bottom: 10px;
}
.footer text{
  font-size: 14px;
  color:darkgrey; 
  font-style: unset;
}
.footer i-icon{
  margin-left: 20px;
}
.hr{
  background-color: lavender;
