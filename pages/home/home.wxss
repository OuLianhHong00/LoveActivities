/* pages/home.wxss */
.swiper{
  width: 100%;
  height: 150px;
}
.slide-image{
  width: 100%;
  height: 150px;
}
.nav{
  width: 100%;
  height: 100px;
}
.nav_item{
  display: inline-block;
   width: 60px;
   margin: 5px 16px;
}
.nav image{
  height: 55px;
  width:55px;
  border-radius: 17px;
}
.nav navigator{
  display: inline-block;
  font-size: 14px;
  margin: 2px 48px;
  font-style: unset;
  color: darkgrey;
}
.nav text{
  display: inline-block;
  text-align: center;
}

.detail{
   margin:10px 15px;
}
 .title{
  font-size:18px;
  font-weight: 400;
  margin: 10px 5px;
}
.post_card image{
  border-radius: 10px;
  width: 100%;
  height: 150px;
  margin-top: 10px;
}
.content{
  font-style: unset;
  font-size: 16px;
  color:darkgrey; 
  margin-bottom: 10px;
}
.footer text{
  font-size: 14px;
  color:darkgrey; 
  font-style: unset;
}
.footer i-icon{
  margin-left: 20px;
}
.hr{
  background-color: lavender;
  height: 5px;
  width: 100%;
}
