/* pages/pillowtalk/pillowtalk.wxss */
.scroll-detail {
  height: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 10px;
}
.secoll-item{
  display: flex;
  width: 100%;
}
.item-head{
  float: left;
  width: 10%;
}
.item-head image{
  width: 42px;
  height: 42px;
  margin: 10px;
}
.item-detail{
  width:85%;
  margin-left: 30px;
  margin-right: 10px;
}
.item-detail text{
  display: block;
  margin-top: 15px;
  font-size: 16px;
}
#name{
  font-size: 18px;
  color: #00F;
  font-weight: bold;
}
.item-detail image{
  display: inline-block;
  width: 80px;
  height: 80px;
  margin: 10px 5px;
}
.item-footer{
  width:100%;
  height: 20px;
}
.item-footer image{
  width: 20px;
  height: 20px;
  display: inline-block;
}
.item-footer text{
  display: inline-block;
  margin-top: 10px;
  color: #EDEDED;
}
#time{
  float: left;
}
#like{
  float: right;
}