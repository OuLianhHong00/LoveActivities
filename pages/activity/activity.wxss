/* pages/activity/activity.wxss */
.i-tabs-tab-title-current{
  color: black;
}
.addfound{
  position: fixed;
  bottom: 40px;
  right: 20px;
  width: 50px;
  height: 50px;
  border-radius: 50%;
  background-color: #4171f5;
  opacity: 0.5;
}
.search{
  width: 90%;
  height: 30px;
  border-radius: 10px;
  border: 1px solid #1E90FF;
  margin-left: 15px;
  margin-top: 15px;
  margin-bottom: 10px;
}
.search input{
  display: inline-block;
  width: 90%;
  font-size: 14px;
}
.icon_search{
  display: inline-block;
  width: 10%;
  z-index: 3;
}
.search i-icon{
  float: right;
  z-index: 4;
}
.post_card{
  background: #fff 50%;
  border-radius: 10px;
  box-shadow: 8px 14px 38px rgba(39, 44, 49, 0.06), 1px 3px 8px rgba(39, 44, 49, 0.03);
  transition: all 0.5s ease;
  width:90%;
  margin:0 20px 20px;

}

 .title{
  font-size:18px;
  font-family:微软雅黑;
  font-weight: 700;
  margin: 10px 20px;
}
.user {
    margin: 8px 1px 2px 20px;
}
.postDate {
   display: inline-block;
   width: 70%;
   margin-left: 15px;
   line-height: 30px;
   font-size: 16px;
   font-family: 微软雅黑;
   font-weight: 500px;
}
.act_image{
  border-radius: 10px 10px 10px 10px;
  width: 100%;
  height: 150px;
}
.content{
  font-style: unset;
  font-size: 16px;
  color:darkgrey; 
  margin: 10px 20px;
}
.item1{
  display: inline-block;
  width: 50%;
}
.item{
  display: inline-block;
  width: 25%;
}
.footer text{
  font-size: 14px;
  color:darkgrey; 
  font-style: unset;
}
.footer i-icon{
  margin-left: 15px;
  margin-right: 9px;
}
.like_box{
  display: inline-block;
}


.card{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.num{
  width: 5%;
  color: orange;
  margin: 10px 10px;
}
.one{
  width: 55%;
  margin: 10px 0;
  font-size: 15px;
}
.titlec{
  font-size:18px;
  font-family:微软雅黑;
  font-weight: 700;
}
.pcontent{
  font-size: 15px;
  margin: 10px 0;
}
.ptime{
  font-size: 12px;
  color: darkgray;
}
.two{
  width: 25%;
  margin: 10px 10px;
}
.two image{
  width: 90%;
  height: 90%;
  border-radius:5px; 
}
#tabb{
   border-bottom: 1px solid darkgrey;
   margin-bottom: 10px;
}